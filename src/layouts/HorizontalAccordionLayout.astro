---
import Layout from '~/layouts/PageLayout.astro';
import MarkdownLayout from './MarkdownLayout.astro';
import {Content as Level2} from '../content/books/aidinkieli-kirjallisuuden.md';

import type { MetaData } from '~/types';

const { frontmatter } = Astro.props;

const { Content, headings } = await frontmatter.render();

const metadata: MetaData = {
  title: frontmatter?.title,
};
---

<Layout metadata={metadata}>
  <div class="haccordion__wrapper">
    <div class="first_column">
      <MarkdownLayout frontmatter={frontmatter.data} headings={headings}>
        <Content />
      </MarkdownLayout>
    </div>
    <div class="second_column">
      <section class="px-4 py-16 sm:px-6 mx-auto lg:px-8 lg:py-20 max-w-4xl">
        <h1 class="font-bold font-heading text-4xl md:text-5xl leading-tighter tracking-tighter">Kirjallisuus</h1>
        <div
          class="mx-auto prose prose-lg max-w-4xl dark:prose-invert dark:prose-headings:text-slate-300 prose-md prose-headings:font-heading prose-headings:leading-tighter prose-headings:tracking-tighter prose-headings:font-bold prose-a:text-blue-600 dark:prose-a:text-blue-400 prose-img:rounded-md prose-img:shadow-lg mt-8"
        >
          <Level2 />
        </div>
      </section>
    </div>
  </div>
</Layout>

<style is:global>
  .haccordion__wrapper {
    list-style: none;
    padding: 0;
    display: flex;
    flex-direction: row;
  }

  .first_column {
    flex-basis: 75%;
  }

  .second_column {
    flex-basis: 25%;
  }
</style>
